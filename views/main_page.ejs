      /* Premium Modal Styles */
.product-modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.95);
  z-index: 9999;
  overflow-y: auto;
  animation: fadeIn 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  backdrop-filter: blur(8px);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-content {
  background: white;
  margin: 5% auto;
  padding: 40px;
  width: 85%;
  max-width: 1400px;
  border-radius: 20px;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  position: relative;
  border: 1px solid rgba(255, 255, 255, 0.2);
  overflow: hidden;
}

.modal-content::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    135deg,
    rgba(0, 97, 255, 0.03) 0%,
    rgba(96, 239, 255, 0.03) 100%
  );
  z-index: -1;
}

.close-modal {
  position: absolute;
  top: 25px;
  right: 25px;
  width: 40px;
  height: 40px;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: #333;
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
}

.close-modal:hover {
  background: #ff4500;
  color: white;
  transform: rotate(90deg);
}

/* Premium Product Display */
.product-view-container {
  display: flex;
  gap: 50px;
  margin-bottom: 60px;
}

.product-images {
  flex: 1;
  min-width: 500px;
  position: relative;
}

.main-image {
  width: 100%;
  height: 600px;
  object-fit: cover;
  border-radius: 15px;
  cursor: zoom-in;
  transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  box-shadow: 0 15px 30px -10px rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.main-image.zoomed {
  transform: scale(1.8);
  cursor: zoom-out;
  z-index: 10;
  position: relative;
}

.thumbnail-container {
  display: flex;
  gap: 15px;
  margin-top: 25px;
  flex-wrap: wrap;
}

.thumbnail {
  width: 90px;
  height: 90px;
  object-fit: cover;
  border-radius: 8px;
  cursor: pointer;
  border: 2px solid transparent;
  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
  filter: brightness(0.95);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.thumbnail:hover,
.thumbnail.active {
  border-color: #0061ff;
  transform: translateY(-5px) scale(1.05);
  filter: brightness(1);
  box-shadow: 0 8px 20px rgba(0, 97, 255, 0.2);
}

/* Premium Product Details */
.product-details {
  flex: 1;
  min-width: 500px;
  padding: 20px 0;
}

.product-title {
  font-size: 2.8rem;
  color: #1a1a1a;
  margin-bottom: 15px;
  font-weight: 700;
  line-height: 1.2;
  font-family: "Playfair Display", serif;
}

.product-price {
  font-size: 2.2rem;
  color: #ff4500;
  margin-bottom: 25px;
  font-weight: 700;
  display: flex;
  align-items: center;
  gap: 15px;
}

.original-price {
  font-size: 1.5rem;
  color: #999;
  text-decoration: line-through;
  font-weight: 400;
}

.discount-badge {
  background: #ff4500;
  color: white;
  padding: 3px 12px;
  border-radius: 20px;
  font-size: 0.9rem;
  font-weight: 600;
}

.product-rating {
  display: flex;
  align-items: center;
  margin-bottom: 25px;
}

.stars {
  color: #ffc107;
  font-size: 1.2rem;
  letter-spacing: 2px;
  margin-right: 15px;
}

.review-count {
  color: #666;
  font-size: 0.95rem;
  text-decoration: underline;
  cursor: pointer;
}

.product-description {
  margin-bottom: 30px;
  line-height: 1.8;
  color: #555;
  font-size: 1.1rem;
  padding-bottom: 20px;
  border-bottom: 1px solid #eee;
}

/* Premium Options Section */
.options-section {
  display: none;
}

.options-title {
  display: none;
}

.color-options,
.size-options {
  display: none;
}

.color-option,
.size-option {
  display: none;
}

/* Premium Action Buttons */
.action-section {
  margin-top: 40px;
}

.quantity-selector {
  display: flex;
  align-items: center;
  margin-bottom: 30px;
}

.quantity-btn {
  width: 45px;
  height: 45px;
  background: #f8f8f8;
  border: none;
  font-size: 1.3rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  transition: all 0.3s;
}

.quantity-btn:hover {
  background: #0061ff;
  color: white;
}

.quantity-input {
  width: 70px;
  height: 45px;
  text-align: center;
  margin: 0 10px;
  border: 1px solid #eee;
  border-radius: 8px;
  font-size: 1.1rem;
  font-weight: 600;
}

.action-buttons {
  display: flex;
  gap: 20px;
  flex-wrap: wrap;
}

.add-to-cart,
.buy-now,
.wishlist {
  padding: 16px 35px;
  border: none;
  border-radius: 10px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  display: flex;
  align-items: center;
  gap: 12px;
  font-size: 1.1rem;
}

.add-to-cart {
  background: #0061ff;
  color: white;
  box-shadow: 0 5px 20px rgba(0, 97, 255, 0.3);
}

.add-to-cart:hover {
  background: #004aad;
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(0, 97, 255, 0.4);
}

.buy-now {
  background: #ff4500;
  color: white;
  box-shadow: 0 5px 20px rgba(255, 69, 0, 0.3);
}

.buy-now:hover {
  background: #e03d00;
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(255, 69, 0, 0.4);
}

.wishlist {
  background: white;
  color: #333;
  border: 1px solid #ddd;
}

.wishlist:hover {
  background: #f8f8f8;
  transform: translateY(-3px);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  color: #ff4500;
  border-color: #ff4500;
}

/* Premium Recommendations */
.recommendations {
  margin-top: 60px;
  border-top: 1px solid #eee;
  padding-top: 50px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
}

.section-title {
  font-size: 2rem;
  margin-top: 0;
  padding: 0;
}

.view-all {
  color: #0061ff;
  font-weight: 600;
  text-decoration: none;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: all 0.3s;
}

.view-all:hover {
  color: #ff4500;
  transform: translateX(5px);
}

.recommendation-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30px;
}

.recommendation-item {
  background: white;
  border-radius: 15px;
  overflow: hidden;
  box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.1);
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  position: relative;
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.recommendation-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(transparent 60%, rgba(0, 0, 0, 0.5));
  z-index: 1;
  opacity: 0;
  transition: opacity 0.3s;
}

.recommendation-item:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.2);
}

.recommendation-item:hover::before {
  opacity: 1;
}

.recommendation-img {
  width: 100%;
  height: 250px;
  object-fit: cover;
  transition: transform 0.5s;
}

.recommendation-item:hover .recommendation-img {
  transform: scale(1.05);
}

.recommendation-details {
  padding: 20px;
  position: relative;
  z-index: 2;
  background: white;
}

.recommendation-title {
  font-size: 1.1rem;
  margin-bottom: 8px;
  color: #333;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.recommendation-price {
  color: #ff4500;
  font-weight: 700;
  font-size: 1.2rem;
  display: flex;
  align-items: center;
  gap: 10px;
}

.recommendation-original-price {
  font-size: 0.9rem;
  color: #999;
  text-decoration: line-through;
}

.quick-view {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, 20px);
  background: white;
  color: #0061ff;
  padding: 10px 20px;
  border-radius: 30px;
  font-weight: 600;
  opacity: 0;
  transition: all 0.3s;
  z-index: 3;
  border: none;
  cursor: pointer;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.recommendation-item:hover .quick-view {
  opacity: 1;
  transform: translate(-50%, -50%);
}

/* Responsive Styles */
@media (max-width: 1200px) {
  .product-view-container {
    flex-direction: column;
  }

  .product-images,
